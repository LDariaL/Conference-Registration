<div class="grid">
  <div>
    <h2>Register for the conference</h2>
    <form method="POST" action="/register" class="grid-1">
      <div>
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" value="<%= Rack::Utils.escape_html(name) %>" required />
      </div>
      <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= Rack::Utils.escape_html(email) %>" required />
      </div>
      <div>
        <label for="destination">Destination City</label>
        <input type="text" id="destination" name="destination" value="<%= Rack::Utils.escape_html(destination) %>" placeholder="e.g., London" required />
      </div>
      <div>
        <button type="submit">Register</button>
      </div>
      <small>Submitting will store your registration in DynamoDB.</small>
    </form>

    <h3>Your registration</h3>
    <% if defined?(current_registration) && current_registration %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Destination</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= Rack::Utils.escape_html(current_registration['name']) %></td>
            <td><%= Rack::Utils.escape_html(current_registration['email']) %></td>
            <td><%= Rack::Utils.escape_html(current_registration['destination']) %></td>
            <td><%= Time.at(current_registration['created_at'].to_i).utc.strftime('%Y-%m-%d %H:%M UTC') %></td>
          </tr>
        </tbody>
      </table>
    <% else %>
      <p><small>You haven't registered yet.</small></p>
    <% end %>
  </div>

  <div>
    <h2>Weather forecast for <%= Rack::Utils.escape_html(destination) %></h2>
    <% if error %>
      <div class="error"><%= Rack::Utils.escape_html(error) %></div>
    <% elsif weather %>
      <table>
        <thead>
          <tr>
            <th>Time</th>
            <th>Temp (Â°C)</th>
            <th>Conditions</th>
          </tr>
        </thead>
        <tbody>
          <% weather.each do |slot| %>
            <tr>
              <td><%= Rack::Utils.escape_html(slot['dt_txt'] || slot['dt'].to_s) %></td>
              <td><%= (slot.dig('main','temp') || '').to_s %></td>
              <td><%= Rack::Utils.escape_html(slot.dig('weather',0,'description') || '') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p><small>No weather data available. Enter a destination city and register to see the forecast.</small></p>
    <% end %>
  </div>
</div>
