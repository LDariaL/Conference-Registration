<div class="grid">
  <div>
    <h2 class="section-title" style="margin-bottom: 0;">Register for the conference</h2>
    <!-- Add an explicit spacer to guarantee visual separation across render paths -->
    <div class="section-spacer" aria-hidden="true"></div>
    <form method="POST" action="/register" class="grid-1">
      <div>
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" value="<%= Rack::Utils.escape_html(name) %>" required />
      </div>
      <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= Rack::Utils.escape_html(email) %>" required />
      </div>
      <div>
        <label for="destination">Destination City</label>
        <input type="text" id="destination" name="destination" value="<%= Rack::Utils.escape_html(destination && destination != 'London' ? destination : '') %>" placeholder="e.g., Tokyo" required />
      </div>
      <div>
        <button type="submit">Register</button>
      </div>
      <small>Submitting will store your registration in DynamoDB.</small>
    </form>
  </div>
  <div>
    <h2 class="section-title" style="margin-bottom:10px;">Weather (next days) for <%= Rack::Utils.escape_html(destination) %></h2>
    <% if error %>
      <div class="error"><%= Rack::Utils.escape_html(error) %></div>
    <% elsif weather_daily %>
      <table style="margin-bottom: 16px;">
        <thead>
          <tr>
            <th>Date</th>
            <th>Min / Max (Â°C)</th>
            <th>Rain chance</th>
            <th>Conditions</th>
          </tr>
        </thead>
        <tbody>
          <% weather_daily.each do |day| %>
            <% # day: {'date'=>"YYYY-MM-DD", 'temp'=>{'min'=>..,'max'=>..}, 'pop'=>0..1, 'weather'=>[{ 'description'=>.., 'icon'=>.. }], 'timezone_offset'=>seconds } %>
            <% date_str = day['date'] || (Time.at(day['dt'].to_i).utc.to_date.to_s rescue nil) %>
            <% temp = day['temp'] || {} %>
            <% min = temp['min'] %>
            <% max = temp['max'] %>
            <% desc = (day.dig('weather',0,'description') || '') %>
            <% icon = (day.dig('weather',0,'icon') || nil) %>
            <% pop = day['pop'] %>
            <tr>
              <td><%= Rack::Utils.escape_html(date_str.to_s) %></td>
              <td><%= [min, max].compact.map { |t| t.round(1) }.join(' / ') %></td>
              <td><%= pop ? (pop * 100).round : '-' %>%</td>
              <td>
                <% if icon %>
                  <img alt="" src="https://openweathermap.org/img/wn/<%= icon %>@2x.png" style="width:32px;height:32px;vertical-align:middle;margin-right:6px;" />
                <% end %>
                <%= Rack::Utils.escape_html(desc) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="margin-bottom: 16px;"><small>No weather data.</small></p>
    <% end %>

    <h3 class="section-title" style="margin: 14px 0 10px 0;">Recent registrations</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Destination</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% registrations.each do |r| %>
          <tr>
            <td><%= Rack::Utils.escape_html(r['name']) %></td>
            <td><%= Rack::Utils.escape_html(r['email']) %></td>
            <td><%= Rack::Utils.escape_html(r['destination']) %></td>
            <td><%= Time.at(r['created_at'].to_i).utc %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
