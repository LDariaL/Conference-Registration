source 'https://rubygems.org'

gem 'rack', '~> 2.2'
# For simple HTTP requests to OpenWeather
gem 'httpx', '~> 1.1'
# AWS SDK for DynamoDB persistence
gem 'aws-sdk-dynamodb', '~> 1.95'
# For ERB templating (standard library, but ensure availability)
# erb is part of stdlib; included by Ruby.
gem 'lamby'

group :development do
  gem 'rackup', '< 2.0'
end
